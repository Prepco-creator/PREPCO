<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# âœ… Fix for /plans/ and any folder-like route that maps to a .html file
RewriteRule ^plans/?$ /plans.html [L]

# âœ… Serve existing files and folders as-is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# âœ… Rewrite clean URLs like /about â†’ /about.html
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]
</IfModule>

# ðŸš« Prevent Apache from trying to list directories (which causes 403)
Options -Indexes
